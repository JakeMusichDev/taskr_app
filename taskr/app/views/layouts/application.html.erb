<!DOCTYPE html>
<html>
  <head>
    <title>Taskr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !current_user %>
    <div>
      <%= link_to "Sign In", signin_path %> || <%= link_to "Sign Up", new_user_path %>
    </div>
      <% else %>
    <div>  <%= link_to "Ma P-file", user_path(current_user) %> || <%= link_to "Sign Out", signout_path, method: :delete %>
    </div>
    <% end %>

    <%= yield %>
    <button><%= link_to "All Events", events_path %></button>
    <button><%= link_to "All Tasks", tasks_path %></button>
    <button><%= link_to "Home Page", root_path %></button>
  </body>
</html>
